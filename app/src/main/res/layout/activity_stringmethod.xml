<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stringmethod">

    <TextView
        android:id="@+id/strmethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/edittext"
        android:text="@string/strmethod"
        android:textSize="35sp"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000000"
       />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/strmethod"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/strb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:text="@string/strb"
                android:textSize="20sp"

                android:typeface="serif"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10sp"
                app:srcCompat="@drawable/method1"
                tools:ignore="ContentDescription"
                android:layout_below="@+id/strb"
                />
            <ImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="30sp"
                app:srcCompat="@drawable/method2"
                tools:ignore="ContentDescription"
                android:layout_below="@+id/image4"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
