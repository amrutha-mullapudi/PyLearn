<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".funct">
    <TextView
        android:id="@+id/funct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/edittext"
        android:layout_marginTop="20sp"
        android:text="@string/funct"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000000"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/funct"
    >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/funct1"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:text="@string/funct1"
            android:textSize="20sp"

            android:typeface="serif"
            android:textColor="#000000"/>
            <TextView
            android:id="@+id/funct2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10sp"
            android:text="@string/funct2"
            android:textSize="20sp"

            android:typeface="serif"
            android:layout_below="@+id/funct1"
            android:textColor="#000000"/>
            <TextView
            android:id="@+id/funct3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:text="@string/funct3"
            android:textSize="20sp"

            android:typeface="serif"
            android:layout_below="@+id/funct2"
            android:textColor="#000000"/>
            <LinearLayout
            android:id="@id/functo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/funct3">
                <Button
                android:id="@+id/button42funct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginStart="50dp"
                android:background="@drawable/copyyy"
                android:textAlignment="center"
                android:textColor="#ffe8ed"
                android:textSize="13sp"
                android:layout_weight="1"/>
                <Button
                android:id="@+id/button41funct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="@drawable/tryyy"
                android:onClick="browser"
                android:layout_marginStart="80dp"
                android:textAlignment="center"
                android:textColor="#ffe8ed"
                android:textSize="13sp"
                android:layout_weight="1"/>
            </LinearLayout>
            <TextView
            android:id="@+id/funct4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:text="@string/funct4"
            android:textSize="20sp"

            android:typeface="serif"
            android:textColor="#000000"
            android:layout_below="@+id/functo" />
            <TextView
                android:id="@+id/funct5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10sp"
            android:text="@string/funct5"
            android:textSize="20sp"
            android:typeface="serif"
            android:textColor="#000000"
            android:layout_below="@+id/funct4" />
            <TextView
            android:id="@+id/funct6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:text="@string/funct6"
            android:textSize="20sp"
            android:typeface="serif"
            android:textColor="#000000"
            android:layout_below="@+id/funct5" />
            <LinearLayout
                android:id="@id/functo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/funct6">

                <Button
                    android:id="@+id/button42funct1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/copyyy"
                    android:textAlignment="center"
                    android:textColor="#ffe8ed"
                    android:textSize="13sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/button41funct1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/tryyy"
                    android:onClick="browser"
                    android:layout_marginStart="80dp"
                    android:textAlignment="center"
                    android:textColor="#ffe8ed"
                    android:textSize="13sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/funct7a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:text="@string/funct7a"
                android:textSize="20sp"

                android:typeface="serif"
                android:textColor="#000000"
                android:layout_below="@+id/functo1" />
            <TextView
                android:id="@+id/funct7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/edittext"

                android:text="@string/funct7"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="#357DE8"
                android:layout_below="@+id/funct7a" />
            <TextView
                android:id="@+id/funct8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/edittext"

                android:text="@string/funct8"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="#357DE8"
                android:layout_below="@+id/funct7" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>