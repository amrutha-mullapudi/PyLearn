                android:typeface="serif"
                android:textColor="#000000"
                android:layout_below="@+id/otrye1" />
            <TextView
                android:id="@+id/trye8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10sp"
                android:text="@string/manip8"
                android:textSize="20sp"

                android:typeface="serif"
                android:textColor="#000000"

                android:layout_below="@+id/trye7" />
            <TextView
                android:id="@+id/trye9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:text="@string/manip9"
                android:textSize="20sp"

                android:typeface="serif"
                android:textColor="#000000"
                android:layout_below="@+id/trye8" />

            <LinearLayout
                android:id="@id/otrye2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/trye9">

                <Button
                    android:id="@+id/button42manip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/copyyy"
                    android:textAlignment="center"
                    android:textColor="#ffe8ed"
